# Paddle Configuration
# Copy this file to .env.local for local development

# Environment: sandbox or production
# - sandbox: Uses test tokens and allows checkout from localhost
# - production: Uses live tokens and requires verified domain
VITE_PADDLE_ENV=sandbox

# Sandbox Token (for local development)
# Get your sandbox token from: https://vendors.paddle.com/authentication/sandbox/tokens
VITE_PADDLE_SANDBOX_TOKEN=your_sandbox_token_here

# Sandbox Price ID (for testing)
VITE_PADDLE_SANDBOX_PRICE_ID=your_sandbox_price_id_here

# Live Token (for production deployment)
# Get your live token from: https://vendors.paddle.com/authentication/tokens
VITE_PADDLE_LIVE_TOKEN=your_live_token_here

# Live Price ID (for production)
VITE_PADDLE_LIVE_PRICE_ID=your_live_price_id_here

# Test user bypass (only for development)
# Set to "true" to allow user_id starting with "test_" to bypass access control
VITE_TEST_USER_BYPASS=true

# API Base URL (optional, defaults to same origin)
VITE_API_BASE_URL=http://localhost:8000
